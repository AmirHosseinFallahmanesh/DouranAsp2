@model HomeViewModel

<div class="row">

    <div class="col-6 ">
        @foreach (var item in Model.LastNews)
        {
            <div class="text-right border border-1 clearfix">
                <img src="@item.ImageUrl" class="float-right" width="100" height="100" />
                <h3>@item.Title</h3>
                <p>@item.Description</p>
            </div>

        }
    </div>

    <div class="col-3  text-right">

        @Html.Partial("LastNews",Model.LastNews)
    </div>

    <div class="col-3 ">
        @foreach (var item in Model.Ads)
        {
            <img width="200" height="200" src="@item.ImageUrl" alt="Alternate Text" />

        }
    </div>
</div>

